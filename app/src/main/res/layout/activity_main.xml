<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvPersonID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:text="人员序号"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSamplingNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="采集序号"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/tvPersonID"
        app:layout_constraintTop_toBottomOf="@+id/tvPersonID" />

    <EditText
        android:id="@+id/edtPersonID"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/material_dynamic_neutral60"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvPersonID"
        app:layout_constraintStart_toEndOf="@+id/tvPersonID"
        app:layout_constraintTop_toTopOf="@+id/tvPersonID"
        app:layout_constraintVertical_bias="0.583"
        tools:text="输入人员序号" />

    <EditText
        android:id="@+id/edtSampNum"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/material_dynamic_neutral60"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvSamplingNum"
        app:layout_constraintStart_toStartOf="@+id/edtPersonID"
        app:layout_constraintTop_toTopOf="@+id/tvSamplingNum"
        app:layout_constraintVertical_bias="0.666"
        tools:text="输入采集序号" />

    <Button
        android:id="@+id/btMinusPersonID"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="-1"
        app:layout_constraintBottom_toBottomOf="@+id/edtPersonID"
        app:layout_constraintStart_toEndOf="@+id/edtPersonID"
        app:layout_constraintTop_toTopOf="@+id/edtPersonID" />

    <Button
        android:id="@+id/btAddPersonID"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="+1"
        app:layout_constraintBottom_toBottomOf="@+id/btMinusPersonID"
        app:layout_constraintStart_toEndOf="@+id/btMinusPersonID"
        app:layout_constraintTop_toTopOf="@+id/btMinusPersonID"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btMinusSampNum"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="-1"
        app:layout_constraintBottom_toBottomOf="@+id/edtSampNum"
        app:layout_constraintStart_toStartOf="@+id/btMinusPersonID"
        app:layout_constraintTop_toTopOf="@+id/edtSampNum" />

    <Button
        android:id="@+id/btAddSampNum"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="+1"
        app:layout_constraintBottom_toBottomOf="@+id/btMinusSampNum"
        app:layout_constraintStart_toStartOf="@+id/btAddPersonID"
        app:layout_constraintTop_toTopOf="@+id/btMinusSampNum" />

    <Button
        android:id="@+id/btStartSampling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="64dp"
        android:background="@color/start_green"
        android:text="开始采集"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/btMinusSampNum"
        app:layout_constraintTop_toBottomOf="@+id/btMinusSampNum"
        tools:ignore="TextContrastCheck" />

    <Spinner
        android:id="@+id/spinnerSelectPoint"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginTop="80dp"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/btStartSampling"
        app:layout_constraintTop_toBottomOf="@+id/btStartSampling"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btMarkPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="打    点"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/spinnerSelectPoint"
        app:layout_constraintTop_toBottomOf="@+id/spinnerSelectPoint"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="选择打点"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/spinnerSelectPoint"
        app:layout_constraintEnd_toStartOf="@+id/spinnerSelectPoint"
        app:layout_constraintTop_toTopOf="@+id/spinnerSelectPoint" />

    <Button
        android:id="@+id/btUndoMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:text="撤销(待实现,只允许撤销一次"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/btMarkPoint"
        app:layout_constraintEnd_toStartOf="@+id/btMarkPoint"
        app:layout_constraintTop_toTopOf="@+id/btMarkPoint" />

    <TextView
        android:id="@+id/tvGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/tv_user_guide"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btMarkPoint" />

    <TextView
        android:id="@+id/tvMoveNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/tv_move_note"
        android:textAlignment="textStart"
        android:textColor="#F44336"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGuide" />

    <TextView
        android:id="@+id/tvServerAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="服务器IP/Port"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/tvSamplingNum"
        app:layout_constraintTop_toBottomOf="@+id/tvSamplingNum" />

    <EditText
        android:id="@+id/edtServerIP"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="10.255.18.240"
        app:layout_constraintBottom_toBottomOf="@+id/tvServerAddress"
        app:layout_constraintStart_toEndOf="@+id/tvServerAddress"
        app:layout_constraintTop_toTopOf="@+id/tvServerAddress" />

    <EditText
        android:id="@+id/edtServerPort"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ems="10"
        android:inputType="number"
        android:minHeight="48dp"
        android:text="9090"
        app:layout_constraintBottom_toBottomOf="@+id/edtServerIP"
        app:layout_constraintStart_toEndOf="@+id/edtServerIP"
        app:layout_constraintTop_toTopOf="@+id/edtServerIP"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>