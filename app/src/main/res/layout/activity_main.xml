<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvPersonID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="64dp"
        android:text="人员序号"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSamplingNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="采集序号"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/tvPersonID"
        app:layout_constraintTop_toBottomOf="@+id/tvPersonID" />

    <EditText
        android:id="@+id/editTextPersonID"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/material_dynamic_neutral60"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvPersonID"
        app:layout_constraintStart_toEndOf="@+id/tvPersonID"
        app:layout_constraintTop_toTopOf="@+id/tvPersonID"
        app:layout_constraintVertical_bias="0.619"
        tools:text="输入人员序号" />

    <EditText
        android:id="@+id/editTextSampNum"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/material_dynamic_neutral60"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvSamplingNum"
        app:layout_constraintStart_toStartOf="@+id/editTextPersonID"
        app:layout_constraintTop_toTopOf="@+id/tvSamplingNum"
        app:layout_constraintVertical_bias="0.666"
        tools:text="输入采集序号" />

    <Button
        android:id="@+id/buttonMinusPersonID"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="-1"
        app:layout_constraintBottom_toBottomOf="@+id/editTextPersonID"
        app:layout_constraintStart_toEndOf="@+id/editTextPersonID"
        app:layout_constraintTop_toTopOf="@+id/editTextPersonID" />

    <Button
        android:id="@+id/buttonAddPersonID"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="+1"
        app:layout_constraintBottom_toBottomOf="@+id/buttonMinusPersonID"
        app:layout_constraintStart_toEndOf="@+id/buttonMinusPersonID"
        app:layout_constraintTop_toTopOf="@+id/buttonMinusPersonID"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonMinusSampNum"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="-1"
        app:layout_constraintBottom_toBottomOf="@+id/editTextSampNum"
        app:layout_constraintStart_toStartOf="@+id/buttonMinusPersonID"
        app:layout_constraintTop_toTopOf="@+id/editTextSampNum" />

    <Button
        android:id="@+id/buttonAddSampNum"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="+1"
        app:layout_constraintBottom_toBottomOf="@+id/buttonMinusSampNum"
        app:layout_constraintStart_toStartOf="@+id/buttonAddPersonID"
        app:layout_constraintTop_toTopOf="@+id/buttonMinusSampNum" />

    <Button
        android:id="@+id/buttonStartSampling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:background="@color/start_green"
        android:text="开始采集"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/buttonMinusSampNum"
        app:layout_constraintTop_toBottomOf="@+id/buttonMinusSampNum"
        tools:ignore="TextContrastCheck" />

    <Spinner
        android:id="@+id/spinnerSelectPoint"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/buttonStartSampling"
        app:layout_constraintTop_toBottomOf="@+id/buttonStartSampling"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/buttonMarkPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="打    点"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/spinnerSelectPoint"
        app:layout_constraintTop_toBottomOf="@+id/spinnerSelectPoint"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="选择打点"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/spinnerSelectPoint"
        app:layout_constraintEnd_toStartOf="@+id/spinnerSelectPoint"
        app:layout_constraintTop_toTopOf="@+id/spinnerSelectPoint" />

    <Button
        android:id="@+id/buttonUndoMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:text="撤销(待实现,只允许撤销一次"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonMarkPoint"
        app:layout_constraintEnd_toStartOf="@+id/buttonMarkPoint"
        app:layout_constraintTop_toTopOf="@+id/buttonMarkPoint" />

    <TextView
        android:id="@+id/tvGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/tv_user_guide"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMarkPoint" />

    <TextView
        android:id="@+id/tvMoveNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/tv_move_note"
        android:textAlignment="textStart"
        android:textColor="#F44336"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGuide" />


</androidx.constraintlayout.widget.ConstraintLayout>